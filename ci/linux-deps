#!/bin/bash

yum install -y openssl11-devel
yum install -y libffi libffi-devel zlib-devel libcurl-devel
yum install -y bzip2-devel bzip2-libs xz-devel xz-libs

python -m pip install pip --upgrade

git submodule init
git submodule update

export LIBRARY_PATH="/usr/lib64/openssl11"
export C_INCLUDE_PATH="/usr/include/openssl11"

cd htslib
autoheader
autoconf
./configure --enable-libcurl --enable-s3 --enable-lzma --enable-bz2
make

cd ..
pip install -r requirements.txt
